{% extends 'base.html.twig' %}

{% block title %}Pengambilan{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
  {% include 'navbar/pengambilanNavbar.html.twig' %} 

    <div class="col-12"> 
    <h3>Data Pengambilan</h3>
 
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Nama Barang</th>
                <th>Jumlah Produksi</th>
                <th>Jumlah Pengambilan</th>
                <th>Stock Barang</th>
            </tr>
        </thead>
        <tbody>
        {% for pengambilan in pengambilans %}
            <tr>
                <td>{{ pengambilan.namabarang }}</td>
                <td>{{ pengambilan.jumlahproduksi }}</td>
                <td>{{ pengambilan.jumlahpengambilan }}</td>
                <td>{{ pengambilan.jumlahproduksi - pengambilan.jumlahpengambilan }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
  </div>
</div>
{% endblock %}
