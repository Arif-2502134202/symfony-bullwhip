<form method="post" action="{{ path('app_pesanan_delete', {'id': pesanan.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pesanan.id) }}">
    <div class="text-center">
        <button class="btn btn-danger me-2 btn-sm">Delete</button>
    </div>
</form>
