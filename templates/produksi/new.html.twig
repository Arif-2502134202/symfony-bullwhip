{% extends 'base.html.twig' %}

{% block title %}Produksi{% endblock %}

{% block body %}
<div class="text-center"><h2>Tambah Data</h2></div>
<div class="container">
    <div class="row">
    <div class="mb-3 row">
    <label for="pemesan" class="col-sm-2 col-form-label">Pemesan</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext" id="pemesan" value="{{datapesanan.pemesan}}" readonly disabled>
    </div>
    </div>
    <div class="mb-3 row">
    <label for="jumlahpesanan" class="col-sm-2 col-form-label">jumlah Pesanan</label>
    <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="jumlahpesanan" value="{{datapesanan.jumlah}}" readonly disabled>
    </div>
    </div>
    <div class="mb-3 row">
    <label for="namabarang" class="col-sm-2 col-form-label">Nama Barang</label>
    <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" id="namabarang" value="{{barang.nama}}" readonly disabled>
    </div>
    </div>
    <form action="{{ path('app_produksi_submit')}}" method="GET"> 

    <div class="mb-3 row">
    <label for="idpesanan" class="col-sm-2 col-form-label">ID Pesanan</label>
    <div class="col-sm-10">
        <input type="text" class="form-control-plaintext" name="idpesanan" id="idpesanan" value="{{datapesanan.id}}" readonly>
    </div>
    </div>

    <div class="mb-3 row">
    <label for="jumlah" class="col-sm-2 col-form-label">Jumlah Order</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" name="jumlah" id="jumlah">
    </div>
    </div>
    
    <div class="mb-3 row">
    <label for="leadtime" class="col-sm-2 col-form-label">Lead Time</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" name="leadtime" id="leadtime">
    </div>
    </div>
    
    <div class="mb-3 row">
    <button type="submit" class="btn btn-sm btn-success me-2">Save</button>
    </div>
    </form>
    </div>

    
</div>

    <a href="{{ path('app_produksi_order') }}" class="btn btn-secondary me-2 btn-sm">back to list</a>
{% endblock %}
