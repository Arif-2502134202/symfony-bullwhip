{% extends 'base.html.twig' %}

{% block title %}Pesanan{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
  {% include 'navbar/produksiNavbar.html.twig' %} 

    <div class="col-12"> 
    <h3>Data Pesanan</h3>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pemesan</th>
                <th>Barang</th>
                <th>Jumlah</th>
                <th>Proses</th>
            </tr>
        </thead>
        <tbody>
        {% for pesanan in pesanans %}
            <tr>
                <td>{{ pesanan.id }}</td>
                <td>{{ pesanan.pemesan }}</td>
                <td>{{ pesanan.nama }}</td>
                <td>{{ pesanan.jumlah }}</td>
                <td>
                {% if pesanan.proses == 0 %}
                    <a href="{{ path('app_produksi_new', {'id': pesanan.id}) }}" class="btn btn-sm btn-success me-2">Proses</a>
                {% else %}
                    <button class="btn btn-sm btn-secondary me-2">Sudah Diproses</button> 
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
  </div>
</div>
{% endblock %}
